RewriteEngine On

# Rewrite feeds to Feedburner, except for feedburner itself.
RewriteCond %{HTTP_USER_AGENT} !FeedBurner
RewriteRule ^blog/atom.xml$ http://feeds.feedburner.com/vkurup [R=302,L]

RewriteCond %{HTTP_USER_AGENT} !FeedBurner
RewriteRule ^blog/rss/rss.xml$ http://feeds.feedburner.com/vkurup [R=302,L]

RewriteCond %{HTTP_USER_AGENT} !FeedBurner
RewriteRule ^blog/feed/atom$ http://feeds.feedburner.com/vkurup [R=302,L]

RewriteRule ^blog/one-entry?entry_id=9669 /blog/2004/01/02/backup-strategy

# Set up pretty error document pages
ErrorDocument 404 /404.html
ErrorDocument 403 /403.html

# Protect this file
<Files .htaccess>
order deny,allow
deny from all
</Files>
